<div class="container">
  <h1>主题活动</h1>
</div>
<script type="text/javascript" language="JavaScript">

    function get_theme(){
        document.getElementById("hidden_theme").value=document.getElementById("select_theme").value;
    }

    $(document).ready(function () {


        var a = document.getElementById("select_theme");
        a.options[0].selected = true;
        document.getElementById("hidden_theme").value=document.getElementById("select_theme").value;



    });



</script>
<%= form_for(@admintheme, :html => {:class=>'form-horizontal m-t',id:"signupForm",:multipart => true}) do |f| %>

    <div class="form-group">
      <label class="col-sm-3 control-label">活动类型：</label>
      <div class="col-sm-5">
        <%= f.number_field :themecla_id , class:"form-control",id:"hidden_theme" %>
        <select class="form-control m-b" id="select_theme" name="account" onchange="get_theme()">
          <% @themetype.each  do |theme| %>
              <option value=<%= theme.id %> ><%=theme.name %></option>

          <% end %>
        </select>
      </div>
    </div>


    <div class="form-group">
      <label class="col-sm-3 control-label">活动名称：</label>
      <div class="col-sm-5">
        <%= f.text_field :title ,class:"form-control"%>
      </div>
    </div>



    <div class="form-group">
      <label class="col-sm-3 control-label">选择图片：</label>
      <div class="col-sm-3">
        <%= f.file_field :image ,class:"form-control"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-3">
        <%= f.submit '提交',class:"button button-glow button-rounded button-raised button-primary pull-right" %>
      </div>
    </div>
    </div>
<% end %>
