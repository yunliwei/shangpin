
<div class="container">
  <h1>主题活动</h1>

    <div class="ibox-content">

      <table border="1">
        <thead>
        <tr>
          <th style="text-align:center">活动类型</th>&nbsp;
          <th style="text-align:center">活动标题</th>
          <th style="text-align:center">创建时间</th>
          <th style="text-align:center">操作</th>






        </tr>
        </thead>
        <tbody>
        <% @themes.each do |f| %>
            <tr>



              <td>
                <% @themeclas.each do |themecla| %>
                    <% if themecla.id  == f.themecla_id %>
                        <%= themecla.name %>
                        <% break %>
                    <% end %>
                <% end %>
              </td>


              <td style="text-align:center">
                <%= f.title %>
              </td>




              <td style="text-align:center">
                <%= f.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              </td>

              <td style="text-align:center">

                <%= link_to "编辑", edit_admintheme_path(f),class: " external item-link item-content alert-text,fa fa-pencil" %>&nbsp;
                <%= link_to '删除', admintheme_path(f), class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
</td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新建", new_admintheme_path,class: "button button-glow button-rounded button-raised button-primary pull-right external item-link item-content alert-text",'data-no-turbolink'=>true %>
      <br>
    </div>

  </div>
</div>














