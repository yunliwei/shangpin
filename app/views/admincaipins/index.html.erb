
<div class="container">
  <h1>特色菜品</h1>

    <div class="ibox-content">

      <table class="table table-hover table-bordered">
        <thead>
        <tr>
          <th style="text-align:center">菜品类型</th>
          <th style="text-align:center">菜品名称</th>
          <th style="text-align:center">菜品描述</th>
          <th style="text-align:center">菜品价格</th>

        </tr>
        </thead>
        <tbody>
        <% @caipin.each do |f| %>
            <tr>
              <td>
                <%@section=Caipincla.find(f.caipincla_id)%><%=@section.name%> <%= f.caipincla_id %>
              </td>
              <td style="text-align:center">
                <%= f.name %>
              </td>

              <td style="text-align:center">
                <%= f.summary %>
              </td>
              <td style="text-align:center">
                <%= f.price %>
              </td>
              </td>

              <td>
                <input type="checkbox" value="1" name="roles[]" id="roles_" class="center">
                <label for="SuperAdmin"></label>
              </td>

              <td>

                <%= link_to "编辑", edit_admincaipin_path(f),class: "fa fa-pencil" %>&nbsp;
                <%= link_to '删除', admincaipin_path(f), class: "fa fa-trash", method: :delete, data: { confirm: 'Are you sure?' } %>

            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新建", new_admincaipin_path,class: "button button-glow button-rounded button-raised button-primary pull-right external item-link item-content alert-text",'data-no-turbolink'=>true %>
      <br>
    </div>

  </div>
</div>














